{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution":"node",
        "module":"ES2022",
        "strict": true,
        "declaration":false,
        "noLib":false,
        "emitDecoratorMetadata":true,
        "experimentalDecorators":true,
        "sourceMap":true,
        "pretty":true,
        "allowUnreachableCode":true,
        "allowUnusedLabels":true,
        "noImplicitAny":true,
        "noImplicitReturns":false,
        "noImplicitUseStrict":false,
        "outDir":"dist/",
        "baseUrl":"src/",
        "listFiles":false,
        "noEmitHelpers":true
    },
    "include":[ 
        "src/**/*"
     ],
     "exclude":[ 
        "node_modules"
     ],
     "compileOnSave":false
}